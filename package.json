{
  "name": "agent-memory",
  "version": "0.9.16",
  "description": "MCP server providing structured memory backend for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "default": "./dist/mcp/index.js"
    },
    "./restapi": {
      "types": "./dist/restapi/index.d.ts",
      "default": "./dist/restapi/index.js"
    }
  },
  "bin": {
    "agent-memory": "dist/cli.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm run validate",
    "build": "npm run build:all",
    "build:all": "npm run clean && tsc -p tsconfig.all.json && chmod +x dist/cli.js",
    "build:mcp": "npm run clean && tsc -p tsconfig.mcp.json && chmod +x dist/cli.js",
    "build:rest": "npm run clean && tsc -p tsconfig.rest.json && chmod +x dist/cli.js",
    "link": "npm link --ignore-scripts",
    "postinstall": "test -f dist/cli.js && chmod +x dist/cli.js || true",
    "dev": "tsx watch src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "start:rest": "node dist/cli.js rest",
    "start:both": "node dist/cli.js both",
    "restore-migrations": "node scripts/restore-migrations.js",
    "pretest": "npm run restore-migrations",
    "test": "vitest",
    "test:run": "npm run restore-migrations && vitest run",
    "test:coverage": "npm run restore-migrations && vitest run --coverage",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "bench:query": "vitest bench --run tests/benchmarks/query.bench.ts",
    "bench:write": "vitest bench --run tests/benchmarks/write.bench.ts",
    "bench:search": "vitest bench --run tests/benchmarks/search.bench.ts",
    "bench:locomo": "npx tsx tests/benchmarks/run-locomo-production.ts",
    "bench:extraction": "npx tsx tests/benchmarks/run-extraction-quality.ts",
    "bench:summarization": "npx tsx tests/benchmarks/run-summarization-quality.ts",
    "bench:query-quality": "npx tsx tests/benchmarks/run-query-quality.ts",
    "bench:human-eval": "npx tsx tests/benchmarks/human-eval/run-human-eval.ts",
    "bench:human-eval:report": "npx tsx tests/benchmarks/human-eval/run-human-eval.ts report",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:backup": "node -e \"const fs=require('fs');const path=require('path');const src='data/memory.db';const dest='data/backup-'+Date.now()+'.db';if(fs.existsSync(src)){fs.copyFileSync(src,dest);console.log('Backup created:',dest)}else{console.error('No database found')}\"",
    "db:restore": "node -e \"const fs=require('fs');const args=process.argv.slice(2);if(!args[0]){console.error('Usage: npm run db:restore <backup-file>');process.exit(1)}if(fs.existsSync(args[0])){fs.copyFileSync(args[0],'data/memory.db');console.log('Database restored from',args[0])}else{console.error('Backup file not found:',args[0])}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:layers": "! grep -r \"from.*mcp/\" src/db src/services src/utils --include='*.ts' | grep -v '.test.ts' | grep -v 'mcp/types'",
    "lint:architecture": "tsx scripts/check-architecture.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.json\"",
    "typecheck": "tsc --noEmit",
    "clean": "node -e \"const fs=require('fs');['dist','coverage','.tsbuildinfo'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch(e){}})\"",
    "validate": "npm run lint && npm run lint:layers && npm run lint:architecture && npm run format:check && npm run typecheck && npm run test:run",
    "ci:test": "npm run restore-migrations && npm run build && npm run lint && npm run lint:layers && npm run lint:architecture && npm run format:check && npm run typecheck && npm run test:run",
    "sync-rules": "tsx scripts/sync-rules.ts",
    "sync-rules:watch": "tsx scripts/watch-rules.ts",
    "setup": "tsx scripts/setup.ts",
    "health": "tsx scripts/check-health.ts",
    "setup-hook": "tsx scripts/setup-hook.ts",
    "verify-response": "tsx scripts/verify-response.ts",
    "docs:lint": "npm run docs:check:mcp-tools && npm run docs:lint:links && npm run docs:lint:md && npm run docs:lint:vale",
    "docs:generate:mcp-tools": "tsx scripts/generate-mcp-tools-doc.ts",
    "docs:check:mcp-tools": "tsx scripts/generate-mcp-tools-doc.ts --check",
    "docs:generate:env": "tsx scripts/generate-env-docs.ts",
    "docs:check:env": "tsx scripts/generate-env-docs.ts --check",
    "docs:generate:openapi": "tsx scripts/generate-openapi-spec.ts",
    "docs:validate:openapi": "redocly lint openapi.json",
    "docs:lint:links": "tsx scripts/check-doc-links.ts",
    "docs:lint:md": "markdownlint-cli2",
    "docs:lint:vale": "vale README.md docs/"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "~0.71.2",
    "@clack/prompts": "^0.11.0",
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^13.0.2",
    "@lancedb/lancedb": "~0.23.0",
    "@modelcontextprotocol/sdk": "~1.25.1",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "~12.5.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "~0.45.1",
    "fastify": "^5.2.1",
    "node-cron": "^4.2.1",
    "openai": "~6.15.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^11.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "~0.31.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "markdownlint-cli2": "^0.20.0",
    "memfs": "^4.51.1",
    "prettier": "^3.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "agent",
    "memory",
    "sqlite"
  ],
  "license": "MIT",
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "optionalDependencies": {
    "ioredis": "~5.8.2"
  }
}
